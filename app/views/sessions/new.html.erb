<h1>ログイン</h1>

<div class="row">
  <div class="form-padding col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "パスワード" %>
      <%= link_to "(パスワードをお忘れの方はこちら)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>次回から自動ログインする</span>
      <% end %>

      <%= f.submit "ログイン", class: "btn btn-success" %>
    <% end %>

    <p class="set-padding-top">登録がまだの方はこちら <%= link_to "会員登録", signup_path %></p>
  </div>
</div>